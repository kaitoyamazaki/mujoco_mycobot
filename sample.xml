<mujoco model="mycobot_pi">
    <compiler angle="radian"/>
    <default>
        <!-- Fusion 360 の座標系を MuJoCo に変換します -->
        <geom type="mesh" xyaxes="1 0 0 0 1 0"/>
    </default>
    <asset>
        <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="300" height="300"/>
        <material name="grid" texture="grid" texrepeat="8 8" reflectance=".2"/>
        <mesh name="base" file="official_model/base.stl" scale=".001 .001 .001"/>
        <mesh name="link1" file="official_model/link1.stl" scale=".001 .001 .001"/>
        <mesh name="link2" file="official_model/link2.stl" scale=".001 .001 .001"/>
        <mesh name="link3" file="official_model/link3.stl" scale=".001 .001 .001"/>
        <mesh name="link4" file="official_model/link4.stl" scale=".001 .001 .001"/>
        <mesh name="link5" file="official_model/link5.stl" scale=".001 .001 .001"/>
        <mesh name="link6" file="official_model/link6.stl" scale=".001 .001 .001"/>
    </asset>

    <worldbody>
        <geom name="floor" type="plane" pos="0 0 0" size="5 5 0.1" material="grid"/>
        <light name="top" pos="0 0 2" diffuse="1 1 1" specular=".5 .5 .5" attenuation=".1 .1 .1"/>

        <body name="base">
            <geom mesh="base" pos="0 0 0.142"/>
            <body name="link1">
                <joint name="joint1" pos="0 0 .074802" axis="0 0 1" range="-2.88 2.88" damping="1"/>
                <geom mesh="link1" pos="0 0 0.142"/>
                <body name="link2">
                    <joint name="joint2" pos="-.034705 0 .134507" axis="1 0 0" range="-2.88 2.88" damping="1"/>
                    <geom mesh="link2" pos="0 0 0.142"/>
                    <body name="link3">
                        <joint name="joint3" pos="-.027916 0 .244507" axis="1 0 0" range="-2.88 2.88" damping="1"/>
                        <geom mesh="link3" pos="0 0 0.142"/>
                        <body name="link4">
                            <joint name="joint4" pos="-.029360 0 .340507" axis="1 0 0" range="-2.88 2.88" damping="1"/>
                            <geom mesh="link4" pos="0 0 0.142"/>
                            <body name="link5">
                                <joint name="joint5" pos="-.063396 0 .375932" axis="0 0 1" range="-2.88 2.88" damping="1"/>
                                <geom mesh="link5" pos="0 0 0.142"/>
                                <body name="link6">
                                    <joint name="joint6" pos="-.063396 -.0448 .415557" axis="0 1 0" range="-3.14 3.14" damping="1"/>
                                    <geom mesh="link6" pos="0 0 .142"/>
                                </body>
                            </body>
                        </body>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <contact>
        <exclude body1="base" body2="link1"/>
        <exclude body1="link1" body2="link2"/>
        <exclude body1="link2" body2="link3"/>
        <exclude body1="link3" body2="link4"/>
        <exclude body1="link4" body2="link5"/>
        <exclude body1="link5" body2="link6"/>
    </contact>

</mujoco>