<mujoco model="mycobot_pi">
    <compiler angle="radian"/>
    <default>
        <!-- Fusion 360 の座標系を MuJoCo に変換します -->
        <geom type="mesh" xyaxes="1 0 0 0 1 0"/>
    </default>
    <asset>
        <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="300" height="300"/>
        <material name="grid" texture="grid" texrepeat="8 8" reflectance=".2"/>
        <mesh name="base" file="stl/base.stl" scale=".001 .001 .001"/>
        <mesh name="link1" file="stl/link1.stl" scale=".001 .001 .001"/>
        <mesh name="link2" file="stl/link2.stl" scale=".001 .001 .001"/>
        <mesh name="link3" file="stl/link3.stl" scale=".001 .001 .001"/>
        <mesh name="link4" file="stl/link4.stl" scale=".001 .001 .001"/>
        <mesh name="link5" file="stl/link5.stl" scale=".001 .001 .001"/>
        <mesh name="hand" file="stl/hand.stl" scale=".001 .001 .001"/>
    </asset>

    <worldbody>
        <geom name="floor" type="plane" pos="0 0 0" size="5 5 0.1" material="grid"/>
        <light name="top" pos="0 0 2" diffuse="1 1 1" specular=".5 .5 .5" attenuation=".1 .1 .1"/>

        <body name="base">
            <geom mesh="base"/>
            <body name="link1">
                <joint name="joint1" pos="0 0 .062" axis="0 0 1" range="-2.88 2.88"/>
                <geom mesh="link1"/>
                <body name="link2">
                    <joint name="joint2" pos=".033 0 .132" axis="1 0 0" range="-2.88 2.88"/>
                    <geom mesh="link2"/>
                    <body name="link3">
                        <joint name="joint3" pos=".033 0 .242" axis="1 0 0" range="-2.88 2.88"/>
                        <geom mesh="link3"/>
                        <body name="link4">
                            <joint name="joint4" pos=".033 0 .338" axis="1 0 0" range="-2.88 2.88"/>
                            <geom mesh="link4"/>
                            <body name="link5">
                                <joint name="joint5" pos=".066 0 .378" axis="0 0 1" range="-2.88 2.88"/>
                                <geom mesh="link5"/>
                            </body>
                        </body>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <contact>
        <exclude body1="base" body2="link1"/>
        <exclude body1="link1" body2="link2"/>
        <exclude body1="link2" body2="link3"/>
        <exclude body1="link3" body2="link4"/>
        <exclude body1="link4" body2="link5"/>
    </contact>

    <actuator>
        <position name="joint1" joint="joint1" ctrllimited="true" ctrlrange="-2.88 2.88" kp="20" kv="0.2"/>
        <position name="joint2" joint="joint2" ctrllimited="true" ctrlrange="-2.88 2.88" kp="20" kv="0.2"/>
        <position name="joint3" joint="joint3" ctrllimited="true" ctrlrange="-2.88 2.88" kp="20" kv="0.2"/>
        <position name="joint4" joint="joint4" ctrllimited="true" ctrlrange="-2.88 2.88" kp="10" kv="0.15"/>
        <position name="joint5" joint="joint5" ctrllimited="true" ctrlrange="-2.88 2.88" kp="1" kv="0.1"/>
    </actuator>
</mujoco>